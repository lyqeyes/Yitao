@model YiTao.Modules.Bll.Models.TuiSong
@{
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}
@section style{
    <!-- BEGIN PAGE LEVEL STYLES -->
    @*富文本编辑器*@
    <link rel="stylesheet" type="text/css" href="~/Scripts/kindeditor/themes/default/default.css" />
    <!-- END PAGE LEVEL STYLES -->
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            推送管理 <small>新建</small>
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/Management/MainPage/Lunbo">主页</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/Management/Tuisong/">推送管理</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li><a href="#">新建</a></li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="portlet box blue col-md-12">
    <div class="portlet-title">
        <div class="caption"><i class="fa fa-edit"></i>新建推送</div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
            <a href="javascript:;" class="remove"></a>
        </div>
    </div>
    <div class="portlet-body form">
        <form role="form" method="post" action="/Management/Tuisong/Edit">
            <div class="form-body">
                <span style="color:red">@ViewBag.msg</span>
                <div class="form-group">
                    <label>标题：</label>
                    <input type="text" class="form-control" id="Title" name="Title" placeholder="不可为空" value="@Model.Title">
                    <input type="text" class="form-control" name="Id" value="@Model.Id" style="display:none">
                    <input type="text" class="form-control" name="Ok" value="@Model.Ok" style="display:none">
                </div>
                <div class="form-group">
                    <label>内容：</label>
                    <textarea name="TuiSongContent" id="Detail" style="width:100%;height:300px;visibility:hidden;" placeholder="不能为空">@Model.TuiSongContent</textarea>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn blue">保存</button>
                    <button type="button" class="btn default" onclick="window.location.href = '/Management/Tuisong/Index'">取消</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @*富文本编辑*@
    <script type="text/javascript" charset="utf-8" src="~/Scripts/kindeditor/kindeditor-min.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/Scripts/kindeditor/lang/zh_CN.js"></script>
    <script>
        var editor;
        KindEditor.ready(function (K) {
            editor = K.create('textarea[name="TuiSongContent"]', {
                resizeType: 1,
                allowPreviewEmoticons: false,
                allowImageUpload: true,
                uploadJson: '/Management/Upload/EditorUpload',
                items: [
                    'fontname', 'fontsize', '|', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline',
                    'removeformat', '|', 'justifyleft', 'justifycenter', 'justifyright', 'insertorderedlist',
                    'insertunorderedlist', '|', 'image', 'link']
            });
        });
    </script>
}