    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="~/favicon.ico" />

    @RenderSection("style", required: false)
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="page-header-fixed">
    <!-- BEGIN HEADER -->
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <!-- BEGIN TOP NAVIGATION BAR -->
        @Html.Partial("_Header")
        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix"></div>

    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        @Html.Partial("_Menu")
        <!-- END SIDEBAR -->
        <!-- BEGIN PAGE -->
        <div class="page-content">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            @RenderBody()
        </div>
        <!-- END PAGE -->
    </div>
    @Html.Partial("_Footer")
    <!-- BEGIN JAVASCRIPTS -->
    <script src="~/assets/plugins/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/jquery.cookie.min.js" type="text/javascript"></script>
    <script src="~/assets/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/assets/scripts/app.js"></script>
    <script type="text/javascript" src="~/assets/scripts/form-components.js"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/assets/scripts/app.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            // initiate layout and plugins
            App.init();
            FormComponents.init();
            document.getElementById("ManagerName").textContent = GetCookie("LoginInfo", "UserName");
        });
        //获取Cookie值
        function GetCookie(sMainName, sSubName) {
            var re = new RegExp((sSubName ? sMainName + "=(.*?&)*?" + sSubName + "=(.*?)(&|;)" : sMainName + "=(.*?);"), "i");
            return re.test(unescape(document.cookie)) ? (sSubName ? RegExp["$2"] : RegExp["$1"]) : "";
        }
    </script>
    @RenderSection("PageSpecificJavascriptIncludes", required: false)
    @RenderSection("scripts", required: false)
    @*眼睛添加*@
    <script src="~/Scripts/formCheck.js"></script>
    <link rel="stylesheet" href="~/Content/formCherk.css" />
    <link rel="stylesheet" href="~/Content/TableCss.css" />
    <script src="~/Scripts/formCheck.js"></script>

</body>
<!-- END BODY -->
