@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>个人信息</title>
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link href="~/css/common.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <div class="warp">
        <!------------------	Header ------------------------------>
        <div class="header">
            <a href="javascript:history.go(-1)">
                <img src="/img/buttons/09.png" class="header_left_pic">
            </a>
            <h2 class="my_pagetitle" style="margin-top:0.2em;">个人管理</h2>
            @*<img src="/img/title/08.png" class="pagetitle">*@
            <div id="clear"></div>
        </div>
        <div id="blank" style="height:50px;"></div><!--Blank area -->
        <br />
        <div class="container">
            <div class="row">
                <span class="col-xs-offset-2 col-xs-5">@(ViewBag.NowJiFen)积分</span>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="progress progress-striped">
                            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="@ViewBag.JiFen" aria-valuemin="0" aria-valuemax="100" style="width: @ViewBag.JiFen%">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <span class="col-sm-1 col-xs-1">LV1</span>
                        <span class="col-sm-1 col-xs-2">LV2</span>
                        <span class="col-sm-1 col-xs-3">LV3</span>
                        <span class="col-sm-1 col-xs-3">LV4</span>
                    </div>
                </div>
            </div>

            <br />
            <div class="row">
                <button type="button" class="col-md-12 col-xs-12 btn btn-default btn-lg btn-block">
                    <span class="col-md-1 col-xs-1 glyphicon glyphicon-user"></span>
                    <span class="col-md-2 col-xs-3">用户名</span>
                    <span class="col-md-3 col-xs-3"><code>@ViewBag.Name</code></span>
                </button>
            </div>
            <div class="row">
                <button onclick="gaimima()" class="col-md-12 col-xs-12 btn btn-default btn-lg btn-block">
                    <span class="col-md-1 col-xs-1 glyphicon glyphicon-wrench"></span>
                    <span class="col-md-2 col-xs-2">修改账户密码</span>
                </button>
            </div>
            <div class="row">

                <button type="button" class="col-md-12 col-xs-12 btn btn-default btn-lg btn-block">
                    <span class="col-md-1 col-xs-1 glyphicon glyphicon-phone-alt"></span>
                    <span class="col-md-3 col-xs-3">手机号码</span>
                    <span class="col-md-4 col-xs-4">@ViewBag.Phone</span>
                </button>
            </div>
            <div class="row">
                <button onclick="shouhuodizhi()" type="button" class="col-md-12 col-xs-12 btn btn-default btn-lg btn-block">
                    <span class="col-md-1 col-xs-1 glyphicon glyphicon-shopping-cart"></span>
                    <span class="col-md-3 col-xs-3">收货地址</span>
                </button>
            </div>
            <br /><br />
            <div class="row">
                <button type="button" class="btn btn-warning btn-lg btn-block">注销</button>
            </div>
        </div>
    </div>
    
    <script type="text/javascript" src="~/js/jquery.js"></script>
    <script type="text/javascript" src="~/js/jquery.flexslider-min.js"></script>
    <script type="text/javascript" src="~/js/common.js"></script>
    <script type="text/javascript">
        function gaimima()
        {
            window.location = "/Watch/PersonInfor/ChangePassWord";
            
        }
        function shouhuodizhi()
        {
            window.location = "/Watch/PersonInfor/SerAddress";
        }
    </script>
</body>
</html>
