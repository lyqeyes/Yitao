@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    @using YiTao.Modules.Bll.Models
    @using YiTao.Web.Areas.Watch.Models
    @model List<Statistic<ZhuanTiItem>>
    <meta charset="utf-8">
    <title>商品列表</title>
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link href="/css/common.css" rel="stylesheet">
</head>

<body>
    <div class="warp">
        <!------------------	Header ------------------------------>
        <div class="header">
            <a href="javascript:history.go(-1)">
                <img src="/img/buttons/09.png" class="header_left_pic">
            </a>
            <a href="http://www.baidu.com">
                <img src="/img/buttons/01.png" class="header_right_pic">
            </a>
            <div id="clear"></div>
            <span class="pagetitle">收纳用品</span>
        </div>
        <div id="blank"></div><!--Blank area -->
        <!----------------------	Header End 	-------------------->
        <!--------------	banner ----------------------->
        <div class="banner">
            <div class="container">
                <div class="flexslider">
                    <ul class="slides">
                        @foreach (LunBo item in ViewData["lunbolist"] as List<LunBo>)
                        {
                            <li>
                                <a href="@item.ClickUrl"><img src="@item.ImageUrl" /></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!--------------	banner ----------------------->
        <!-----------product list----------------------->
        <div class="product_list">
            @foreach (Statistic<ZhuanTiItem> item in Model)
            {
                <div class="list_box">
                    <!--产品类表-->
                    <a href="/watch/yitao/ZhuantiItemDetail/@item.data.ZhuanTiItemId"><img class="box_left" src="@item.data.ImageUrl" alt="" /></a>
                    <ul class="box_right">
                        <li>
                            <a href="/watch/yitao/ZhuantiItemDetail/@item.data.ZhuanTiItemId" class="title" style="font-size:12px;">@item.data.Name</a>
                        </li>
                        <!------	返积分 和 包邮 ----------------------->
                        <li class="pic">
                            <a href="#" class="pic_a">
                                <img src="/img/buttons/integral_pic.png" alt="" />
                            </a>
                            <a href="#" class="pic_span">返积分 @item.data.FanJiFen</a>
                            <a href="#" class="pic_a">
                                <img src="/img/buttons/post_pic.png" alt="" />
                            </a>
                            <a href="#" class="pic_span">
                                @{
                if (item.data.BaoYou == 1)
                {
                    <span>包邮</span>
                }
                else
                {
                    <span>不包邮</span>
                }
                //收藏处理
                string CollectedClass = "",
                    UnCollectedClass = "";
                //已登录
                if (ViewBag.AllCollectStatus == 1)
                {
                    if (item.IsCollected == 0)
                    {
                        CollectedClass = "hide";
                        UnCollectedClass = "";
                    }
                    else
                    {
                        CollectedClass = "";
                        UnCollectedClass = "hide";
                    }
                    <a class="pic_a ToCollect collect-img @UnCollectedClass" data-account="@ViewBag.AccountId" data-type="1" data-shangpinid="@item.data.JuZheKouItemId">
                        <img src="../../img/collect.png" />
                    </a>
                                    <a class="pic_span ToCollect @UnCollectedClass" data-account="@ViewBag.AccountId" data-type="1" data-shangpinid="@item.data.JuZheKouItemId">收藏</a>
                                    <a class="pic_a Anti-Collect  collect-img @CollectedClass" data-account="@ViewBag.AccountId" data-type="1" data-shangpinid="@item.data.JuZheKouItemId">
                                        <img src="~/img/Collected.png" />
                                    </a>
                                    <a class="pic_span Anti-Collect @CollectedClass" data-account="@ViewBag.AccountId" data-type="1" data-shangpinid="@item.data.JuZheKouItemId">已收藏</a>
                }
                //未登录
                else
                {
                    <a href="~/Watch/Auth/Login" class="pic_a">
                        <img src="../../img/collect.png" />
                    </a>
                                    <a href="~/Watch/Auth/Login" class="pic_span">收藏</a>
                }
                                }
                            </a>
                        </li>
                        <!------	返积分 和 包邮 End---------------->
                        <li name="name_font" class="font">
                            <span>￥<i>@item.data.Price</i></span>
                            <div class="right_font">
                                <a href="/watch/yitao/ZhuantiItemDetail/@item.data.ZhuanTiItemId"><img src="/img/buttons/input_01.png" alt="" /></a>
                                @*<span class="discount">5折</span>*@
                                <span class="delete">￥@item.data.YuanPrice</span>
                            </div>
                        </li>
                    </ul>
                </div><!--产品类表结束-->
            }
        </div>
        <!-----------product list End------------------->
    </div>
    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/jquery.flexslider-min.js"></script>
    <script type="text/javascript" src="/js/common.js"></script>
    <script src="~/Scripts/CollectAction.js"></script>
</html>
